<h1>Characters</h1>
<table id="character-table" width="100%">
  <thead>
    <tr>
      <th width="15%">Character</th>
      <th width="15%">Movie</th>
      <th width="15">Actor</th>
      <th width="15%">Year</th>
      <th width="40%">Quote</th>
    </tr>
  </thead>
  <tbody>
    <% @characters.each do |character| %>
      <tr class="<%= cycle("odd", "even") -%>">
        <td><%= character.name %></td>
        <td><%= character.movie %></td>
        <td><%= character.actor %></td>
        <td><%= character.year %></td>
        <td><%= character.quote %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/fixedheader/3.1.2/css/fixedHeader.dataTables.min.css">
<script src="https://cdn.datatables.net/fixedheader/3.1.3/js/dataTables.fixedHeader.min.js" type="text/javascript"></script>
<script>
  $(document).ready(function() {
    $("#character-table").dataTable({
      fixedHeader: {
        header: true
      }
    });
  });
</script>
